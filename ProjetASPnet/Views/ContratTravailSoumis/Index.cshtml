@model IEnumerable<ProjetASPnet.Models.ContratTravailSoumis>

@{
    ViewBag.Title = "Liste des travailleurs pour l'entreprise selectionnée";
}



@if (Model != null)
{
    <h2>Liste des travailleurs pour l'entreprise selectionnée</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dateDebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entreprise.denomation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Travailleur.nom)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dateDebut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entreprise.denomation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Travailleur.nom)
            </td>
            <td>
                @Html.ActionLink("Rajouter un Risque", "ChoixTravailleurNewRisque", new { id = item.contrat_id }) |
                @Html.ActionLink("Rajouter un Examen", "ChoixTravailleurNewExamen", new { id = item.contrat_id }) |
            </td>
        </tr>
    }

    </table>
}
else
{
    <h3>Aucune entreprise n'a été selectionnée</h3>
}